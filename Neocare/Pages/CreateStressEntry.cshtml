@page
@model Neocare.Pages.CreateStressEntryModel
@{
    ViewData["Title"] = "Novo Registro de Estresse";
}

<h1>Novo Registro de Estresse</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Entry.StressLevel">Nível de Estresse (1-10)</label>
                <input asp-for="Entry.StressLevel" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="Entry.StressLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entry.Description">Descrição</label>
                <textarea asp-for="Entry.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Entry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SymptomsInput">Sintomas (separados por vírgula)</label>
                <input asp-for="SymptomsInput" class="form-control" />
                <span asp-validation-for="SymptomsInput" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Criar</button>
            <a asp-page="./StressEntries" class="btn btn-secondary mt-3">Voltar para Lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}