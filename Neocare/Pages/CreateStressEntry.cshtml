@page
@model CreateStressEntryModel
@{
    ViewData["Title"] = "Registrar Nível de Estresse";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
          <label asp-for="Entry.StressLevel" class="form-label">Nível de Estresse</label>
     <input asp-for="Entry.StressLevel" class="form-control" type="number" min="1" max="10" />
   <span asp-validation-for="Entry.StressLevel" class="text-danger"></span>
           </div>

        <div class="mb-3">
     <label asp-for="Entry.Description" class="form-label">Descrição</label>
                    <textarea asp-for="Entry.Description" class="form-control" rows="4"></textarea>
         <span asp-validation-for="Entry.Description" class="text-danger"></span>
        </div>

         <div class="mb-3">
 <label asp-for="Entry.Symptoms" class="form-label">Sintomas</label>
     <input asp-for="Entry.Symptoms" class="form-control" placeholder="ex: dor de cabeça, ansiedade, fadiga" />
     <span asp-validation-for="Entry.Symptoms" class="text-danger"></span>
           <small class="form-text text-muted">Digite os sintomas separados por vírgulas</small>
                </div>

     <div class="mb-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
 <a asp-page="./StressEntries" class="btn btn-secondary">Cancelar</a>
    </div>
   </form>
        </div>
 </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}